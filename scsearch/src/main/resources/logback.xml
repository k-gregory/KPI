<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%green([%d{yyyy-MM-dd HH:mm:ss.SSS}]) %highlight(%-5level) %cyan([%logger{36}]) %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="io.github.k_gregory.search" level="DEBUG"/>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>